---
const slides = [
    {
        idAndFor: 's1',
        id: 'slide1',
        plan: 'Basic',
        monthly: '19.99',
        annually: '199.99',
        storage: '500 GB Storage',
        users: '2 Users Allowed',
        limit: 'Send up to 3 GB'
    },
    {
        idAndFor: 's2',
        id: 'slide2',
        plan: 'Professional',
        monthly: '24.99',
        annually: '249.99',
        storage: '1 TB Storage',
        users: '5 Users Allowed',
        limit: 'Send up to 10 GB'
    },
    {
        idAndFor: 's3',
        id: 'slide3',
        plan: 'Master',
        monthly: '39.99',
        annually: '399.99',
        storage: '2 TB Storage',
        users: '10 Users Allowed',
        limit: 'Send up to 20 GB'
    }
]
---

{slides.map(slide => (
    <input type="radio" name="slider" id={slide.idAndFor} checked>
    
    <label for={slide.idAndFor} id={slide.id}>
        <div class="card">
            <h2>{slide.plan}</h2>
            <div class="price">
                <span class="dollar-sign">$</span>
                <span class="digits monthly">{slide.monthly}</span>
                <span class="digits annually">{slide.annually}</span>
            </div>
    
            <h3>{slide.storage}</h3>
            <h3>{slide.users}</h3>
            <h3>{slide.limit}</h3>
    
            <button class="cta">Learn More</button>
        </div>
    </label>
))}

<style>
    input {
        display: none;
    }

    .monthly {
        display: block;
    }
    .annually {
        display: none;
    }

    .card {
        background-color: var(--Very-Light-Grayish-Blue);
        padding: 2.5rem 2rem;
        text-align: center;
        color: var(--Grayish-Blue);
        border-radius: 1rem;
        width: 100%;
        max-width: 25rem;
        margin-bottom: 3rem;
        margin-inline: auto;
    }

    .price {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-block: 1.25rem 2.5rem;
        color: var(--Dark-Grayish-Blue);
    }

    .dollar-sign {
        font-size: 3rem;
    }

    .digits {
        font-size: 5.1rem;
    }

    h3 {
        margin-block: 2.25rem;
    }

    .cta {
        width: 100%;
        /* display: block; */
        /* margin: 0 auto; */
        border: none;
        border-radius: .5rem;
        padding-block: 1rem;
        margin-top: 1.5rem;
        font-family: inherit;
        text-transform: uppercase;
        background-image: linear-gradient(to right, var(--Linear-Gradient));
        color: var(--Very-Light-Grayish-Blue);
        letter-spacing: 3px;
    }

    #slide2 .card {
        background-image: linear-gradient(to top, var(--Linear-Gradient));
        color: var(--Very-Light-Grayish-Blue);

        .price {
            color: var(--Very-Light-Grayish-Blue);
        }

        .cta {
            color: var(--Dark-Grayish-Blue);
            // background-color: var(--Very-Light-Grayish-Blue);
            background: var(--Very-Light-Grayish-Blue);
        }
    }

    // #slide1 .card { background-color: rgba(0, 255, 0, .2); }
    // #slide2 .card { background-color: rgba(0, 0, 255, .2); }
    // #slide3 .card { background-color: rgba(255, 0, 0, .2); }
</style>